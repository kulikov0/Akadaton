<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="3dp"
        android:background="#ededed"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.Guideline
            android:id="@+id/v_guideline0"
            android:layout_width="wrap_content"
            android:layout_height="567dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <android.support.constraint.Guideline
            android:id="@+id/v_guideline1"
            android:layout_width="wrap_content"
            android:layout_height="567dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <android.support.constraint.Guideline
            android:id="@+id/v_guideline2"
            android:layout_width="wrap_content"
            android:layout_height="567dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />


        <android.support.constraint.Guideline
            android:id="@+id/v_guideline3"
            android:layout_width="wrap_content"
            android:layout_height="567dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <android.support.constraint.Guideline
            android:id="@+id/v_guideline4"
            android:layout_width="wrap_content"
            android:layout_height="567dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.69" />


        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16:00"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="@+id/v_guideline1"
            app:layout_constraintRight_toLeftOf="@+id/v_guideline3" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:textOff="↓"
            android:textOn="↑"
            app:layout_constraintLeft_toLeftOf="@+id/v_guideline4"
            app:layout_constraintRight_toLeftOf="@+id/v_guideline2"
            app:showText="true"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="4dp" />

    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:background="#ededed"/>
</LinearLayout>